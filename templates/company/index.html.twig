{% extends 'base.html.twig' %}

{% block title %}Company index{% endblock %}

{% block body %}

    <h1>Company index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Siret</th>
                <th>Adresse</th>
                <th>Code postal</th>
                <th>Ville</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
        {% for company in companies %}
            <tr>
                <td>{{ company.id }}</td>
                <td>{{ company.name }}</td>
                <td>{{ company.siret }}</td>
                <td>{{ company.address }}</td>
                <td>{{ company.zipCode }}</td>
                <td>{{ company.city }}</td>
                <td>
                    <a href="{{ path('company_show', {'id': company.id}) }}">Voir</a>
                    <a href="{{ path('company_edit', {'id': company.id}) }}">Supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Aucun résultat</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <button>
        <a href="{{ path('company_new') }}">Créer une entreprise</a>
    </button>
    <style>
        body {
            background-color: grey;
        }
        a {
            text-decoration: none;
        }
        h1 {
            text-align: center;
        }
        btn {
            background-color: dodgerblue;
        }
    </style>

{% endblock %}
